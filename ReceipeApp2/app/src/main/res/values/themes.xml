<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ReceipeApp2" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.ReceipeApp2" parent="Base.Theme.ReceipeApp2" />

    <style name="txtTitle">
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="txtdesc">
        <item name="android:layout_marginTop">@dimen/_6sdp</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>

    </style>

    <style name="edTitle">
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.1</item>

    </style>

    <style name="edBoxStyle">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:layout_marginTop">@dimen/_4sdp</item>
        <item name="android:gravity">start</item>
        <item name="android:inputType">text|textCapSentences</item>
        <item name="android:minLines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>

    </style>


    <style name="btnDesign">
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/common_btn_draw</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="CustomDialogTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>